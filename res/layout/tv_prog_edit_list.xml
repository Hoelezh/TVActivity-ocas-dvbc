<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tv_prog_edit_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="horizontal"
    android:background="@drawable/prog_edit_item_selector"
    android:descendantFocusability="blocksDescendants" >
    
    <TextView 
        android:id="@+id/prog_idx"
        android:textColor="@color/tv_white" 
        android:textSize="24.0px" 
        android:layout_width="100.0px" 
        android:layout_height="wrap_content" 
        android:layout_marginLeft="36.0px" 
        android:focusable="false" />
    
    
     <TextView 
        android:id="@+id/prog_name"
        android:textColor="@color/tv_white" 
        android:textSize="24.0px" 
        android:layout_width="320.0px" 
        android:layout_height="wrap_content" 
        android:focusable="false" />
     
    <ImageView 
        android:id="@+id/prog_delet"
        android:src="@drawable/tv_del"
        android:layout_width="32.0px"
        android:layout_height="32.0px" 
        android:layout_marginLeft="20.0px" 
        android:layout_gravity="center"
        android:visibility="invisible"
        android:focusable="false"
        android:contentDescription="@string/image_description" /> 
    
    <ImageView 
        android:id="@+id/prog_move" 
        android:src="@drawable/tv_move"
        android:layout_width="32.0px" 
        android:layout_height="32.0px" 
        android:layout_marginLeft="10.0px" 
        android:layout_gravity="center"
        android:visibility="invisible"
        android:focusable="false"  
        android:contentDescription="@string/image_description" />

</LinearLayout>
