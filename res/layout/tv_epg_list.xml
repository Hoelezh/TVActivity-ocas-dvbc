<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tv_epg_list"
    android:background="@drawable/tv_epg_bg"
    android:layout_width="620px"
    android:layout_height="580px"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="92px" >
    <View 
        android:id="@+id/tv_epg_focus"
        android:background="@drawable/tv_epg_focus"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="48px" />
    <LinearLayout
        android:id="@+id/tv_epg_header"
        android:layout_width="wrap_content"
        android:layout_height="48px"
        android:layout_centerHorizontal="true"
        android:padding="5px"
        android:orientation="horizontal" >
        <ImageView
            android:id="@+id/tv_epg_pre"
            android:src="@drawable/tv_epg_pre"
            android:layout_width="36px"
            android:layout_height="22px"
            android:layout_marginTop="10px"
            android:layout_marginRight="30px" />
        <TextView 
            android:id="@+id/tv_epg_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30px"
            android:textColor="#FFFFFF"
            android:text="2013-02-22" />
        <ImageView
            android:id="@+id/tv_epg_next"
            android:src="@drawable/tv_epg_next"
            android:layout_width="36px"
            android:layout_height="22px"
            android:layout_marginTop="10px"
            android:layout_marginLeft="30px" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/tv_epg_items"
        android:layout_below="@id/tv_epg_header"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </LinearLayout>
    <TextView 
        android:layout_below="@id/tv_epg_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal|bottom"
        android:textColor="#FFFFFF"
        android:textSize="30px"
        android:paddingBottom="10px"
        android:text="@string/tv_epg_hint" />
</RelativeLayout>