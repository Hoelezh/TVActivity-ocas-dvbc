<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:id="@android:id/background" android:drawable="@drawable/tuner_bar_bg"/>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="8.0dip" />
                <gradient android:startColor="#8cffff" android:endColor="#0e92f1" android:angle="270.0"/>
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/secondaryProgress">
     <clip>
            <shape>
                <corners android:radius="8.0dip" />
                <gradient android:startColor="#606060" android:endColor="#606060" android:angle="90.0"/>
            </shape>
        </clip>
    </item>
</layer-list>